{
  "name": "cogito",
  "version": "1.2.0",
  "description": "The desktop application about computer science.",
  "homepage": "https://www.fujia.site/",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "publish": "build --linux -p always",
    "pack": "rm -rf dist && electron-builder --dir",
    "package:mac": "rm -rf dist && electron-builder --mac",
    "package:linux": "rm -rf dist && electron-builder --linux",
    "package:win64": "rm -rf dist && electron-builder --win --x64",
    "package:win32": "rm -rf dist && electron-builder --win --ia32",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "productName": "Cogito",
    "appId": "com.github.fushenguang.cogito",
    "copyright": "Copyright Â© 2019 FuJia.Inc",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fushenguang",
        "repo": "cogito"
      }
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico",
      "installerHeaderIcon": "build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cogito"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "tar.gz",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "build/icons/icon.png",
      "category": "Network",
      "executableName": "Cogito"
    }
  },
  "keywords": [
    "node.js",
    "electron"
  ],
  "author": {
    "name": "FuJia",
    "email": "fujia.site@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fushenguang/cogito"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "electron-log": "^3.0.1",
    "electron-updater": "^4.0.6"
  }
}
